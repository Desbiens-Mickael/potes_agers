{% extends "layout.html.twig" %}

{% block content %}
	<div class="container d-flex flex-column justify-content-center align-items-center vh-100">
		<img src="https://www.wearephenix.com/wp-content/uploads/2021/09/distribution-tranchevalorisez-faim-partenaire-bleu-vert-jaune-corail-fr.svg" class="w-25 mb-5" alt="">
		<form action="" method="post">
			{% if errors %}
				<p class="error-register">Ces acc√®s ne fonctionnent pas</p>
				<ul>
					{% for error in errors %}
						<li class="error-list">{{error}}</li>
