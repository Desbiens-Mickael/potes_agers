{% extends 'layout.html.twig' %}

{% block content %}
	<div class="container d-flex flex-column justify-content-center align-items-center vh-100">
		<img src="https://www.wearephenix.com/wp-content/themes/phenix/assets/img/stickers/3_DISTRIBUTION/3_BANANE/distribution_trancheinvendus_banane_vert-jaune_fr.svg" class="size-img mb-5" alt="">
		<form action="" method="post">
			{% if errors %}
				<p class="error-register">Ces accès ne fonctionnent pas</p>
				<ul>
					{% for error in errors %}
						<li class="error-list">{{error}}</li>
					{% endfor %}
				</ul>
			{% endif %}
			<div class="d-flex flex-column">
				<label for="email">Email :</label>
				<input type="email" id="email" name="email">
				<label for="password">Mot de passe :</label>
				<input type="password" id="password" name="password">
				<div class="d-flex justify-content-between mt-1">
					<a href="/register">S'inscrire</a>
					<a href="">Mot de passe oublié?</a>
				</div>
				<div class="btn mt-3">
					<button type="submit" class="btn">Connexion à Potes'agers</button>
				</div>
			</form>
		</div>
	{% endblock %}
